@model MemberLoginViewModel

@{
    ViewData["Title"] = "Login";
}

<main>
    <section id="sign">
        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    <h1>
                        Sign In
                        To Your Account
                    </h1>
                    <div class="sign">
                        <form action="" method="post">
                            <div class="fieldset">
                                <input type="text" asp-for="UserName" placeholder="Enter Your UserName">
                                <span class="text-danger" asp-validation-for="UserName"></span>
                            </div>
                            <div class="fieldset">
                                <input type="password" asp-for="Password" placeholder="Enter Your Password*">
                                <span class="text-danger" asp-validation-for="Password"></span>
                            </div>

                            <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                            <button class="button button-secondary regis" type="submit">Login</button>
                        </form>
                    </div>
                </div>
                <div class="col-md-6 sign-right">
                    <div class="sign">
                        <h4>DON'T HAVE AN ACCOUNT?</h4>
                        <a asp-controller="account" asp-action="register" class="button button-secondary regis">Create Account</a>
                    </div>
                </div>
            </div>
        </div>
    </section>
</main>

