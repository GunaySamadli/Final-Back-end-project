@model ProfileViewModel
@{
    ViewData["Title"] = "Profile";
    int index = 0;
    int orderItemIndex = 0;
}

@if (TempData["Success"] != null)
{
    @if ((bool)TempData["Success"] == true)
    {
        <input type="hidden" id="success" />
    }
    else
    {
        <input type="hidden" id="error" />

    }
}
<main>
    <section id="checkout">
        <div class="container">
            <div class="row">
                <div class="col-xl-8 col-xs-12 user-col">
                    <div class="user-info">
                        <h1>Shipping Address</h1>
                        <form action="" method="post">
                            <div class="fieldset">
                                <label asp-for="FullName">Full Name*</label>
                                <input asp-for="FullName" type="text" placeholder="Full Name">
                                <span asp-validation-for="FullName" class="text-danger"></span>
                            </div>
                            <div class="fieldset">
                                <label asp-for="UserName">UserName*</label>
                                <input asp-for="UserName" type="text" placeholder="User Name">
                                <span asp-validation-for="UserName" class="text-danger"></span>
                            </div>
                            <div class="name-surname">
                                <div class="fieldset">
                                    <label asp-for="Email">Email Address*</label>
                                    <input asp-for="Email" type="email" placeholder="Email Address">
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>
                                <div class="fieldset">
                                    <label asp-for="PhoneNumber">Phone no*</label>
                                    <input asp-for="PhoneNumber" placeholder="Phone number">
                                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="fieldset">
                                <label asp-for="NewPassword">NewPassword</label>
                                <input asp-for="NewPassword" id="NewPassword" placeholder="Enter your new password">
                                <span class="text-danger" asp-validation-for="NewPassword"></span>
                            </div>
                            <div class="fieldset">
                                <label asp-for="ConfirmNewPassword">Repeat Password</label>
                                <input asp-for="ConfirmNewPassword" id="ConfirmNewPassword" placeholder="Repeat your new password">
                                <span class="text-danger" asp-validation-for="ConfirmNewPassword"></span>
                            </div>
                            <div class="fieldset">
                                <label asp-for="CurrentPassword">Current Password</label>
                                <input asp-for="CurrentPassword" id="CurrentPassword" placeholder="Enter your current password">
                                <span class="text-danger" asp-validation-for="CurrentPassword"></span>
                            </div>
                            <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                            <button class="button button-secondary order" type="submit">Update Profile</button>
                        </form>
                    </div>
                </div>
