@model ResetPasswordViewModel

@{
    ViewData["Title"] = "ResetPassword";
}



<main>
    <section id="sign">
        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    <h1>
                        Reset Password
                    </h1>
                    <div class="sign">
                        <form action="" method="post">
                            <div class="fieldset">
                                <input type="password" asp-for="Password" placeholder="Enter Your Password*">
                                <span class="text-danger" asp-validation-for="Password"></span>
                            </div>
                            <div class="fieldset">
                                <input type="password" asp-for="ConfirmPassword" placeholder="Enter Your Confirm Password">
                                <span class="text-danger" asp-validation-for="ConfirmPassword"></span>
                            </div>
                            <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                            <input type="hidden" name="Email" value="@Model.Email" />
                            <input type="hidden" name="Token" value="@Model.Token" />
                            <button class="button button-secondary regis" type="submit">Reset</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>
</main>